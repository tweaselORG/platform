    "type": "module",
    "scripts": {
        "build": "astro build",
        "dev": "astro dev",
        "fix": "yarn eslint . --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx --fix",
        "postinstall": "patch-package",
        "lint": "tsc && eslint . --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx && git diff --check",
        "preview": "astro preview"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && tsc"
        }
    },
    "lint-staged": {
        "*.{ts,js,tsx,jsx,css,scss,json}": [
            "prettier --write"
        ],
        "*.{ts,js,tsx,jsx}": [
            "eslint --fix"
        ]
    },
    "dependencies": {
        "@astrojs/node": "^8.2.5",
        "@astrojs/preact": "^3.3.0",
        "@datenanfragen/components": "^1.0.0-cssupdate0",
        "astro": "^4.8.5",
        "astro-global": "^1.2.1",
        "edgedb": "^1.5.7",
        "lru-cache": "^10.2.2",
        "p-memoize": "^7.1.1",
        "parse-play": "^2.2.0",
        "patch-package": "^8.0.0",
        "postinstall-postinstall": "^2.1.0",
        "preact": "^10.22.0",
        "preact-i18n": "2.4.0-preactx"
    },
    "devDependencies": {
        "@baltpeter/eslint-config": "2.1.2",
        "@baltpeter/prettier-config": "^3.0.0",
        "@edgedb/generate": "^0.5.3",
        "@types/preact-i18n": "^2.3.6",
        "@typescript-eslint/eslint-plugin": "5.60.0",
        "eslint": "8.43.0",
        "eslint-plugin-eslint-comments": "3.2.0",
        "eslint-plugin-import": "2.27.5",
        "husky": "4.3.7",
        "lint-staged": "13.2.2",
        "prettier": "3.2.5",
        "prettier-plugin-astro": "^0.13.0",
        "sass": "^1.77.2",
        "typescript": "5.1.3"
    }

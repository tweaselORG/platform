    "version": "0.0.0",
    "private": true,
    "description": "The tweasel.org website.",
    "bugs": "https://github.com/tweaselORG/platform/issues",
    "repository": {
        "type": "git",
        "url": "https://github.com/tweaselORG/platform.git"
    },
    "license": "MIT",
    "contributors": [
        {
            "name": "Benjamin Altpeter",
            "email": "hi@bn.al",
            "url": "https://benjamin-altpeter.de"
        },
        {
            "name": "Lorenz Sieben",
            "email": "me@lorenz-sieben.com",
            "url": "https://lorenz-sieben.com"
        }
    ],
    "type": "module",
    "scripts": {
        "build": "astro build",
        "dev": "astro dev",
        "fix": "yarn eslint . --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx --fix",
        "lint": "tsc && eslint . --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx && git diff --check",
        "preview": "astro preview"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && tsc"
        }
    },
    "lint-staged": {
        "*.{ts,js,tsx,jsx,css,scss,json}": [
            "prettier --write"
        ],
        "*.{ts,js,tsx,jsx}": [
            "eslint --fix"
        ]
    },
    "prettier": "@baltpeter/prettier-config",
    "dependencies": {
        "astro": "^4.8.5"
    },
    "devDependencies": {
        "@baltpeter/eslint-config": "2.1.2",
        "@baltpeter/prettier-config": "2.0.0",
        "@typescript-eslint/eslint-plugin": "5.60.0",
        "eslint": "8.43.0",
        "eslint-plugin-eslint-comments": "3.2.0",
        "eslint-plugin-import": "2.27.5",
        "husky": "4.3.7",
        "lint-staged": "13.2.2",
        "prettier": "2.8.8",
        "typescript": "5.1.3"
    }
}
